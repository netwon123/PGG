minimap2 -t 16 -x map-pb ../t2t.asm.hic.p_ctg.fasta ../LDR-HAM/merge_HiFi.fastq.gz | gzip -c - > pb_aln.paf.gz
./purge_dups/bin/pbcstat pb_aln.paf.gz
./purge_dups/bin/calcuts PB.stat > cutoffs 2> calcults.log
./purge_dups/bin/split_fa ../t2t.asm.hic.p_ctg.fasta > asm.split

minimap2 -t 16 -xasm5 -DP asm.split asm.split | pigz -c > asm.split.self.paf.gz
# purge haplotigs and overlap
./purge_dups/bin/purge_dups -2 -T cutoffs -c PB.base.cov asm.split.self.paf.gz > dups.bed 2> purge_dups.log

./purge_dups/bin/get_seqs dups.bed ../t2t.asm.hic.p_ctg.fasta
