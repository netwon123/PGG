python simple_vcf.py sv.raw.vcf sv.vcf
python simple_vcf.py snp.raw.vcf snp.vcf

bcftools concat sv.vcf.gz snp.vcf.gz --Oz o sv-snp.vcf.gz 

ls *simple.vcf.gz_snp.vcf.gz | while read id;
do
~/software/plink --vcf $id --chr 1 \
--double-id \
--allow-extra-chr \
-r2 gz \
--ld-window 10 \
--ld-window-kb 1000 \
--ld-window-r2 0 \
--out LD_${id} --threads 8
done


awk '{print $3, $6, $7}' LD.file > LD.r2.txt
python trans_colname.py LD.r2.txt LD.r2_sv-snp.txt

